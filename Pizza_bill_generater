    if choice==1:
        price=300
        print(f"Rs.{price}")
    elif choice==2:
        price=400
        print(f"Rs.{price}")
elif Pizza==2:
    print("\n1.Veg 2.Non-veg")
    choice=int(input("enter your choice(veg or non-veg):"))
    if choice==1:
        prize=600
        print(f"Rs.{price}")
    elif choice==2:
        price=800
