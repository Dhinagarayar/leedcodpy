from abc import ABC, abstractmethod
class pizza(ABC):
    def __init__(self,type,choice,price,add_on):
        self.type=type
        self.choice=choice
        self.price=price
        self.add_on=add_on


class normal(pizza):
    def __init__(self,choice):
        self.choice=choice
    def veg(self):
        price=300
        return price
    def non_veg(self):
        price=400
        return price
class Delux(pizza):
    def __init__(self,choice):
        self.choice=choice
    def veg(self):
        price=600
        return price
    def Non_veg(self):
        price=800
        return price


print("1.Normal \n2.Delux")
