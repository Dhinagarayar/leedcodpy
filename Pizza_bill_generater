while True: 
    print("\n1.Add-ons  2.Move to Bill")
    ch=int(input("enter the option:"))
    if ch==1:
        ls=[]
        bill=[]
        while True:
            print("\n1.cheese 2.Extra Toppings 3.Take away 4.Water battle 5.ketchep 6.Soft drinks 7.exit")
            chr=int(input("enter the option:"))
            ls.append(chr)
            if chr==1:
                print("adding extra cheese Rs.100")
                ec=100
                bill.append(ec)
            elif chr==2:
                print("Adding extra Toppings Rs.100")
                et=100
                bill.append(et)
            elif chr==3:
                print("Take away Bag charges:Rs.20")
                eb=20
                bill.append(eb)
            elif chr==4:
                print("Add Water bottle:Rs.20")
                ew=20
                bill.append(ew)
            elif chr==5:
                print("Add Ketchep")
                ek=5
                bill.append(ek)
            elif chr==6:
                print("Softdrinks:Rs.75")
                es=75
                bill.append(es)
            elif chr==7:
                break

    elif ch==2:
            print("Thanks for your order")
            break
print("-------Pizza Bill Generator----------")
print(f"Base Price:{price}")
for i in ls:
    if i==1:
        print("cheese:",ec)
    elif i==2:
        print("Extra Toppins:",et)
    elif i==3:
        print("Take away charges:",eb)
    elif i==4:
