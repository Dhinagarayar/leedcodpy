#encapsulation
#polymorphism
#inheritance
#abstract method
from abc import ABC,abstractmethod

class Shape(ABC):
    @abstractmethod
    def area(self):
        pass

class square(Shape):
    def __init__(self,side):
        self.side=side
    def area(self):
        return self.area*self.area
     
class circle(Shape):
    def __init__(self,radius):
        self.radius= r
    def area(self):
        3.14* self.area*self.area

square=square(2)
circle=circle(4)
print(square.area())
print(circle.area())